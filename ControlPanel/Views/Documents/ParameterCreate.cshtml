@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model DocumentParameter

@{
    ViewData["Title"] = "Create Document Parameter";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <h4 class="col-11">Create Parameter</h4>
            <a class="col-1 btn btn-secondary material-icons" type="button">close</a>
        </div>
    </div>

    <div class="card-body">
        <form asp-action="CreateParam" asp-controller="Documents">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row align-items-center">
                <div class="col-4">
                    <input asp-for="@Model.Label" class="form-control" type="text" />
                </div>
                <div class="col-4">
                    <select asp-for="@Model.DataType" asp-items="Html.GetEnumSelectList<DataType>()"
                        class="form-select"></select>
                </div>
                <div class="col-2">
                    <div class="form-check">
                        <input asp-for="@Model.isIdentifier" class="form-check-input" type="checkbox" />
                        <label asp-for="@Model.isIdentifier" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-2 text-end">
                    <button asp-controller="Documents" asp-action="ParameterCreate"
                        class="btn btn-primary material-icons form-input" type="submit">check</button>
                </div>
            </div>
        </form>
    </div>
</div>