@model SystemParameter


@{ 
   ViewData["Title"] = "Edit system parameter";
}

@if (ViewData["ErrMsg"] != null){
   <div class="alert alert-danger" role="alert"> @ViewData["ErrMsg"].ToString() </div>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <h4 class="col-11">Id: @Model.Id</h4>
            <a asp-action="Index" asp-controller="SystemSettings"
               type="button" class="btn-close"></a>
        </div>
    </div>
    <div class="card-body">
        <form id="form" asp-action="SystemParameterEdit" asp-controller="SystemSettings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row" >
                <div class="col-6">
                    <label asp-for="@Model.Property" class="form-label"></label>
                    <input asp-for="@Model.Property" class="form-control" type="text" />
                </div>
                <div class="col-6">
                    <label asp-for="@Model.Value" class="form-label"></label>
                    <input asp-for="@Model.Value" class="form-control" type="text" />
                </div>
            </div>
        </form>
    </div>
   <div class="card-footer">
      <button asp-action="SystemParameterEdit" asp-controller="SystemSettings"
         class="btn btn-primary float-end" form="form" type="submit"> Submit </button>
  </div>
</div>